                      <div style='display: table-cell'>{{c.vapplication}}</div>
                      <div style='display: table-cell'>
                          <a href='/admission/transfer/{{c.vapplication}}'><button class="green">Transfer</button></a>
                          <!--<a href='/admission/c/{{c.vapplication}}'><a href='/admission/grant/{{c.vcandidate}}'><button>Grant</button></a>
                              <a href='/admission/c/{{c.vapplication}}'><a href='/admission/deny/{{c.vcandidate}}'><button class="red">Deny</button></a>-->
                                  </div>
                                  <!--</div>-->
                                  </div>#}
            {% endfor %}
            <div>
            <a href="/hr/emp/search"><button>Return to <i>Search</i></button></a>
            <a href="/hr/emp/{{row[0].vemployee}}"><button class="blue">Update</button></a>
            </div>
        </div>

    </div>
{%endblock %}